<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>eu.de4a</groupId>
	<artifactId>de4a-parent-pom</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>
	<name>de4a-parent-pom</name>
	<description>Base POM to build the DE4A projects</description>
	<inceptionYear>2020</inceptionYear>

	<licenses>
		<license>
			<name>Apache 2</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<properties>
		<maven.compiler.release>11</maven.compiler.release>
		<commons.io.version>2.6</commons.io.version>
		<commons.fileupload.version>1.4</commons.fileupload.version>
		<toop.version>2.1.2-SNAPSHOT</toop.version>
		<helger.commons.version>10.0.0</helger.commons.version>
		<jaxb.version>2.3.0.1</jaxb.version>
		<jakarta.version>2.3.2</jakarta.version>
		<jakarta.activation.api>1.2.2</jakarta.activation.api>
		<jakarta.xml.bind.api.version>2.3.2</jakarta.xml.bind.api.version>
		<jaxb.api.version>2.3.1</jaxb.api.version>
		<log4j-api.version>2.13.0</log4j-api.version>
		<spring.version>5.2.4.RELEASE</spring.version>
		<spring.ws.version>3.0.10.RELEASE</spring.ws.version>
		<spring.boot.version>2.4.4</spring.boot.version>
		<jackson-mapper-asl.version>1.9.9</jackson-mapper-asl.version>
		<jackson.databind.version>2.12.2</jackson.databind.version>
		<jaxb.api.version>2.3.1</jaxb.api.version>
		<jaxb.core.version>2.3.0.1</jaxb.core.version>
		<jaxb2.maven.plugin>2.3.1</jaxb2.maven.plugin>
		<jaxen.version>1.2.0</jaxen.version>
		<javax.validation.api>2.0.1.Final</javax.validation.api>
		<javax.servlet.api.version>3.0.1</javax.servlet.api.version>
		<jstl.version>1.2</jstl.version>
		<axiom.version>1.2.22</axiom.version>
		<slf4j.version>1.7.30</slf4j.version>
		<logback.version>1.2.3</logback.version>
		<log4j2.version>2.14.1</log4j2.version>
		<springfox-version>3.0.0</springfox-version>
		<h2.database.version>1.4.199</h2.database.version>
		<activemq.client.version>5.15.14</activemq.client.version>
		<httpmime.version>4.3.1</httpmime.version>
		<httpclient.version>4.5.12</httpclient.version>
		<taglibs.standard.version>1.1.2</taglibs.standard.version>
		<saaj.impl.version>1.5.2</saaj.impl.version>
		<xmlsec.version>2.2.0</xmlsec.version>
	</properties>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>eu.toop</groupId>
				<artifactId>tc-parent-pom</artifactId>
				<version>${toop.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>eu.toop</groupId>
				<artifactId>tc-api</artifactId>
				<version>${toop.version}</version>
			</dependency>
			<dependency>
				<groupId>eu.toop</groupId>
				<artifactId>tc-mem-external</artifactId>
				<version>${toop.version}</version>
			</dependency>
			<dependency>
				<groupId>eu.toop</groupId>
				<artifactId>tc-mem-phase4</artifactId>
				<version>${toop.version}</version>
			</dependency>
			<dependency>
				<groupId>eu.toop</groupId>
				<artifactId>tc-main</artifactId>
				<version>${toop.version}</version>
			</dependency>
			<dependency>
				<groupId>eu.toop</groupId>
				<artifactId>tc-web-api</artifactId>
				<version>${toop.version}</version>
			</dependency>
			<dependency>
				<groupId>eu.toop</groupId>
				<artifactId>tc-webapp</artifactId>
				<version>${toop.version}</version>
				<classifier>classes</classifier>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<!-- JUnit 4 for testing -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<!-- Sub-projects - must match child directory names; order is important! -->
	<modules>
		<module>de4a-connector</module>
		<module>de4a-commons</module>
		<module>de4a-idk</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<release>11</release>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<source>8</source>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
