<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="debug" strict="true">
    <Properties>
        <property name="kafka.enabled" value="$${bundle:application:de4a.kafka.enabled:-false}" />
        <property name="kafka.url" value="$${bundle:application:de4a.kafka.url:-de4a-dev-kafka.egovlab.eu:9092}" />
        <property name="kafka.topic" value="$${bundle:application:de4a.kafka.topic:-DE4A-CONNECTOR}" />
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
			<!-- Location may be an issue when async logging is used! -->
            <PatternLayout
				pattern="[DE4A-CONNECTOR][%date{ISO8601}] [%-5level] [%thread] %msg -- %location%n" />
        </Console>
        <File name="File"
			fileName="${sys:catalina.base}/logs/connector.log">
            <PatternLayout>
                <pattern>%d %p %C{1.} [%t] %m%n</pattern>
            </PatternLayout>
        </File>
        <Kafka name="Kafka" topic="${kafka.topic}">
            <PatternLayout pattern="[%date{ISO8601}] [%-5level] [%thread] %msg -- %location%n" />
            <Property name="bootstrap.servers">${kafka.url}</Property>
        </Kafka>
        <RollingFile name="rollingFile"
			fileName="${sys:catalina.base}/logs/history/connector.log"
			filePattern="${sys:catalina.base}/logs/history/connector.%d{dd-MMM}.log.gz"
			ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%date{ISO8601} %-5p %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="30 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
        
        <Routing name="RouterKafka">
            <Routes pattern="${kafka.enabled}">
                <Route ref="Kafka" key="true" />
                <Route ref="none" key="false" />
            </Routes>
        </Routing>
    </Appenders>

    <Loggers>
        <Logger name="org.apache.http" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="File" />
            <AppenderRef ref="RouterKafka" />
        </Logger>
        <Logger name="org.springframework" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="File" />
            <AppenderRef ref="RouterKafka" />
        </Logger>
        <Logger name="eu" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="File" />
            <AppenderRef ref="RouterKafka" />
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="File" />
            <AppenderRef ref="RouterKafka"/>
        </Root>
    </Loggers>
</Configuration>
