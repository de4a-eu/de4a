<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true">
  <!-- This file always has precedence in Test runs -->
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <!-- Location may be an issue when async logging is used! -->
      <PatternLayout pattern="[DE4A-CONNECTOR-TEST][%date{ISO8601}] [%-5level] [%thread] %msg -- %location%n" />
    </Console>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="STDOUT" />
    </Root>
  </Loggers>
</Configuration>
